<% if request.fullpath.match(/^\/admin\/users/) %>
  <% content_for :sub_menu do %>
    <ul id="sub_nav" class="inline-menu">
      <%= tab :users %>
      <% if can?(:display, Spree::VirtualGiftCard) %>
        <%= tab :gift_cards, :match_path => '/users/gift_cards' %>
      <% end %>
    </ul>
  <% end %>
<% end %>
